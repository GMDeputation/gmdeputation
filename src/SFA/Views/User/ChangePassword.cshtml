@{
    ViewData["Title"] = "ChangePassword";
}
<div data-ng-controller="changePasswordController">
    <form name="form">
        <div class="topbar">
            <div class="md-toolbar-tools" layout="row">
                <div class="topbar-title" flex>
                    <h2>Change Password</h2>
                    <i class="vertical-seperator" hide-sm hide-xs>&nbsp;</i>
                    <span hide-sm hide-xs><a href="/home">Home</a> / <a href="/nav/Security">Security</a> / Change Password</span>
                </div>
                <div flex="none">
                    <md-button class="add-btn" aria-label="Back to Home" data-ng-click="backToList()">
                        <md-tooltip>Back to Home</md-tooltip>
                        <i class="ti-angle-double-left"></i>
                    </md-button>
                </div>
            </div>
        </div>
        <div class="container">
            <div layout="row" layout-sm="column" layout-xs="column">
                <div flex="60" flex-sm="100" flex-xs="100">
                    <div layout="column" layout-sm="column" layout-xs="column">
                        <md-input-container class="md-block" flex>
                            <label>Current Password</label>
                            <input type="password" name="password" ng-model="user.password" required>
                            <div ng-messages="form.password.$error" md-auto-hide="false">
                                <div ng-message="required">Password is required</div>
                            </div>
                        </md-input-container>
                        <md-input-container class="md-block" flex>
                            <label>New Password</label>
                            <input type="password" ng-model="user.newPassword" name="newPassword" ng-pattern="/^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[^\w\s]).{8,}$/" required>
                            <div ng-messages="form.newPassword.$error" md-auto-hide="false">
                                <div ng-message="required">New Password is required</div>
                            </div>
                        </md-input-container>
                        <md-input-container class="md-block" flex>
                            <label>Confirm Password</label>
                            <input type="password" ng-model="user.confirmPassword" name="userConfirmPassword" ng-pattern="/^(?=.*?[A-Z])(?=.*?[a-z])(?=.*?[0-9])(?=.*?[^\w\s]).{8,}$/" required>
                            <div ng-messages="form.userConfirmPassword.$error" md-auto-hide="false">
                                <div ng-message="required">Confirm Password is required</div>
                            </div>
                        </md-input-container>
                    </div>
                </div>
                <div flex="40" flex-sm="100" flex-xs="100">
                    <div layout="column" layout-sm="column" layout-xs="column">
                        <label for="inputgSTIN" class="col-sm-2 col-form-label">Password Policy</label>
                        <div class="col-sm-10 formInputArea">
                            <ul>
                                <li> At least 8 characters long</li>
                                <li> At least 1 upper case letter [A-Z]</li>
                                <li> At least 1 lower case letter [a-z]</li>
                                <li> At least 1 special character [! @@ # $ % ^ & *]</li>
                                <li> At least 1 number [0-9]</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div layout="row" layout-align="center center">
                <md-button class="save-btn" aria-label="Save" data-ng-click="changePass()" data-ng-disabled="form.$invalid">
                    <md-tooltip>Save</md-tooltip>
                    <i class="far fa-save"></i> Save
                </md-button>
                <md-button class="cancel-btn" aria-label="Cancel" data-ng-click="backToList()">
                    <md-tooltip>Cancel</md-tooltip>
                    <i class="fas fa-reply"></i> Cancel
                </md-button>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <script src="~/scripts/controllers/changePasswordController.js" asp-append-version="true"></script>
    <script src="~/scripts/%/userService.js" asp-append-version="true"></script>
}