@{
    ViewData["Title"] = "Church Map";
}

<div data-ng-controller="churchMapViewController">
    <form name="form">
        <div class="topbar">
            <div class="md-toolbar-tools" layout="row">
                <div class="topbar-title" flex>
                    <h2>Map View</h2>
                    <i class="vertical-seperator" hide-xs>&nbsp;</i>
                    <span hide-xs><a href="/home">Home</a> / <a href="/nav/@ViewBag.Group">@ViewBag.Group</a> / <a href="/churches">Churches</a> / Map View</span>
                </div>
                <div flex="none">
                    <md-button class="add-btn" aria-label="Back to List" data-ng-click="backToList()">
                        <md-tooltip>Back to List</md-tooltip>
                        <i class="ti-angle-double-left"></i> Back to List
                    </md-button>
                </div>
            </div>
        </div>
        <div class="container">
            <div id="dvMap" style="width: 100%; height: 600px">
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @*<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=?"></script>*@
    @*<script src="https://maps.googleapis.com/maps/api/js?sensor=false&language=en"></script>*@
    <script src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyD7d5zEqURlPCFVM_NcsHLGSms_Pnu4-M4"></script>
    <script src="~/scripts/services/churchService.js" asp-append-version="true"></script>
    <script src="~/scripts/controllers/churchMapViewController.js" asp-append-version="true"></script>
}