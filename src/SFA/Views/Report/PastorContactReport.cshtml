@{
    ViewData["Title"] = "Pastor Contact List Report";
}
<div data-ng-controller="pastorContactListReportController">
    <form name="form">
    <!--Topbar section-->
<div class="topbar">
    <div class="md-toolbar-tools" layout="row">
        <div class="topbar-title" flex>
            <h2>Pastor Contact List Report</h2>
            <i class="vertical-seperator" hide-sm hide-xs>&nbsp;</i> <span hide-sm hide-xs><a href="/home">Home</a> / <a href="/nav/@ViewBag.Group">@ViewBag.Group)</a> / Pastor Contact List Report</span>
        </div>
        <div flex="none">
            <md-button class="add-btn" aria-label="Back to home" href="/home"> <md-tooltip>Back to home</md-tooltip> <i class="ti-angle-double-left"></i> </md-button>
        </div>
    </div>
</div>
    <!--//End Topbar section-->
    <!--Filter Section-->
     <div class="container">
    <div layout="row" layout-sm="column" layout-xs="column">
        <md-input-container class="md-block" flex> <label>Search By Pastor Last Name</label> <input ng-model="reportParams.lastName" /> </md-input-container>
        <md-input-container class="md-block" flex> <label>Search By Pastor Email</label> <input ng-model="reportParams.email" /> </md-input-container>
        <md-input-container class="md-block" flex> <label>Search By Pastor City</label> <input ng-model="reportParams.city" /> </md-input-container>
        <md-input-container class="md-block" flex> <label>Search By Pastor State</label> <input ng-model="reportParams.state" /> </md-input-container>
        <md-input-container class="md-block" flex> <label>Search By Pastor PostalCode</label> <input ng-model="reportParams.pincode" /> </md-input-container>
    </div>
    <div layout="row" layout-align="center center">
        <md-button class="save-btn" aria-label="Save" data-ng-click="search()" data-ng-disabled="form.$invalid"> <md-tooltip>Search</md-tooltip> <i class="ti-search"></i> Search </md-button>
        <md-button class="cancel-btn" aria-label="Cancel" href="/nav/@ViewBag.Group"> <md-tooltip>Cancel</md-tooltip> <i class="fas fa-reply"></i> Cancel </md-button>
    </div>
    <div layout="row" layout-sm="column" layout-xs="column">
        <md-button class="add-btn" aria-label="Download" data-ng-click="generateExcell()" data-ng-disabled="searchDatas.length === 0"> <md-tooltip>Generate Excel</md-tooltip> <i class="fas fa-download"></i> Generate Excel </md-button>
    </div>
    <table md-table md-progress="promise">
        <thead md-head>
            <tr md-row>
                <th md-column class="center">Sl No</th>
                <th md-column><span class="pad-l-8">Name</span></th>
                <th md-column><span class="pad-l-8">Email</span></th>
                <th md-column><span class="pad-l-8">Phone(s)</span></th>
                <th md-column><span cl ass="pad-l-8">Address</span></th>
                <th md-column><span class="pad-l-8">City</span></th>
                <th md-column><span class="pad-l-8">State</span></th>
                <th md-column><span class="pad-l-8">Postal Code</span></th>
                <th md-column><span class="pad-l-8">Church Website</span></th>
            </tr>
        </thead>
        <tbody md-body>
            <tr class="md-row md-row-empty" ng-show="searchDatas.length === 0">
                <td class="md-cell" colspan="9">No Data Found</td>
            </tr>
            <tr md-row data-ng-repeat="item in searchDatas track by $index">
                <td md-cell class="center">{{$index+1}}</td>
                <td md-cell class="pad-l-8">{{item.name}}</td>
                <td md-cell class="pad-l-8">{{item.email}}</td>
                <td md-cell class="pad-l-8">{{item.phone}}</td>
                <td md-cell class="pad-l-8">{{item.address}}</td>
                <td md-cell class="pad-l-8">{{item.city}}</td>
                <td md-cell class="pad-l-8">{{item.state}}</td>
                <td md-cell class="pad-l-8">{{item.zipcode}}</td>
                <td md-cell class="pad-l-8">{{item.churchWebsite}}</td>
            </tr>
        </tbody>
    </table>
</div>
</form>
</div>

@section Scripts{
    <script src="~/scripts/services/reportsService.js" asp-append-version="true"></script>
    <script src="~/scripts/controllers/pastorContactListReportController.js" asp-append-version="true"></script>
}